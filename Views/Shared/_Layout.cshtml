<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — приложение ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/jqueryui")
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/css/main");
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/js")
       @* <link rel="stylesheet" href="css/main.css">
<link rel="stylesheet" href="css/print.css" media="print">
<script src="js/jquery-1.6.4.min.js"></script>
<script src="js/custom.js"></script>*@
    </head>
    <body>
        <header>
            <div class="wrap"> <a style="font-size:30px" id="logo" href="@Url.Action("Index", "Home")">CSA</a>
                <hr>
                <nav>
                  <div id="nav"> <strong>Navigation</strong>
                    <ul>
                      <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                      <li class="parent"> <a href="#">Database</a> 
                          <ul>
                            <li> @Html.ActionLink("Schedule", "Index", "Schedule") </li>
                            <li> @Html.ActionLink("Students", "Index", "Student") </li>
                            <li> @Html.ActionLink("Groups", "Index", "Group") </li>
                            <li> @Html.ActionLink("Subjects", "Index", "Subject") </li>
                            <li> @Html.ActionLink("Teachers", "Index", "Teacher") </li>
                            <li> @Html.ActionLink("Classrooms", "Index", "Classroom") </li>
                            <li> @Html.ActionLink("Lesson types", "Index", "LessonType") </li>
                        </ul>
                      </li>
                      <li> @Html.ActionLink("About us", "About", "Home") </li>
                      <li> @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                      <li> @Html.ActionLink("Contacts", "Contact", "Home") </li>
                    </ul>
                  </div>
                </nav>
              </div>
        </header>

        <hr>


        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>        
        <footer>
            <div class="content-wrapper">
                <div style="text-align:center">
                    <p>&copy; @DateTime.Now.Year — CSA</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")     
        @Scripts.Render("~/bundles/jqueryui")
        <script>
            $(function () {
                $(".jqueryui-marker-datepicker").datepicker({
                    dateFormat: "yy-mm-dd",
                    changeYear: true,
                    showOn: "button"
                }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Select a date",
                    text: false
                });
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
