<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — приложение ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/jqueryui")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="allmenu">
                <div class="float-left">                    
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                            <li>@Html.ActionLink("О программе", "About", "Home")</li>
                            <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
                        </ul>  
                                             
                    </nav>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    </div>
                
                <div class="float-left">
                    <nav id="primary_nav_wrap">
                        <ul>
                          <li>@Html.ActionLink("Schedule", "Index", "Schedule")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Schedule")</li>
                              <li>@Html.ActionLink("Create Schedule", "Create", "Schedule")</li>
                              <li>@Html.ActionLink("Copy Schedule", "Copy", "Schedule")</li>
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Students", "Index", "Student")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Student")</li>
                              <li>@Html.ActionLink("Add Students", "Create", "Student")</li>                              
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Teachers", "Index", "Teacher")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Teacher")</li>
                              <li>@Html.ActionLink("Add Teacher", "Create", "Teacher")</li>                              
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Groups", "Index", "Group")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Group")</li>
                              <li>@Html.ActionLink("Add Group", "Create", "Group")</li>                              
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Classrooms", "Index", "Classroom")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Classroom")</li>
                              <li>@Html.ActionLink("Add Classroom", "Create", "Classroom")</li>                              
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Subjects", "Index", "Subject")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "Subject")</li>
                              <li>@Html.ActionLink("Add Subject", "Create", "Subject")</li>                              
                            </ul>
                          </li>
                          <li>@Html.ActionLink("Lesson Types", "Index", "LessonType")
                            <ul>
                              <li>@Html.ActionLink("Main", "Index", "LessonType")</li>
                              <li>@Html.ActionLink("Add Lesson Type", "Create", "LessonType")</li>                              
                            </ul>
                          </li>
                        </ul>
                    </nav>

                </div>
                    </div>
            </div>
        </header>
        <div id="body">
            @*@RenderSection("featured", required: false)*@
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>        
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year — приложение ASP.NET MVC</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")     
        @Scripts.Render("~/bundles/jqueryui")
        <script>
            $(function () {
                $(".jqueryui-marker-datepicker").datepicker({
                    dateFormat: "yy-mm-dd",
                    changeYear: true,
                    showOn: "button"
                }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Select a date",
                    text: false
                });
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
