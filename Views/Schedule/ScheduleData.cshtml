@model IEnumerable<CourseProject.Models.Schedule>

<table>
    <thead>
        <tr>
            <th>                
                <label class="labelForSchedule">Предмет</label>
            </th>
            <th>
                <label class="labelForSchedule">Аудиторія</label>
            </th>
            <th>
                <label class="labelForSchedule">Тип заняття</label>
            </th>
            <th>
                <label class="labelForSchedule">Дата</label>
            </th>
            <th>
                <label class="labelForSchedule">Група</label>
            </th>
            <th>
                <label class="labelForSchedule">Викладач</label>
            </th>
            <th>
                <label class="labelForSchedule">Навчальний рік</label>
            </th>
            <th>
                <label class="labelForSchedule">№ пари</label>
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model) {
        <tr>
           <td>
                @Html.DisplayFor(modelItem => item.Subject.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classroom.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
                @Html.DisplayFor(modelItem => item.Group.EnrollmentYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
                @Html.DisplayFor(modelItem => item.Teacher.Surname)
                @Html.DisplayFor(modelItem => item.Teacher.LastName)            
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentYear)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.LessonNumber)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", new { id=item.Schedule_ID }) |
                @Html.ActionLink("Деталі", "Details", new { id=item.Schedule_ID }) |
                @Html.ActionLink("Видалити", "Delete", new { id=item.Schedule_ID })
            </td>
        </tr>
    }
        
    </tbody>
</table>
<p style="color:red">@Html.Raw(ViewBag.roomNotFree)</p>



