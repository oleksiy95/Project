    <div class="modal" id="dialog1" title="Correct record">
    @Html.Action("CorrectRecord1")
    </div>  }
    
    if(ViewBag.ErrorNumber > 1) {
    <div class="modal" id="dialog2" title="Correct record">
    @Html.Action("CorrectRecord2")
    </div>  }
    
    if(ViewBag.ErrorNumber > 2) {
    <div class="modal" id="dialog3" title="Correct record">
    @Html.Action("CorrectRecord3")
    </div>  }
    
    if(ViewBag.ErrorNumber > 3) {
    <div class="modal" id="dialog4" title="Correct record">
    @Html.Action("CorrectRecord4")
    </div>  }
    
    if(ViewBag.ErrorNumber > 4) {
    <div class="modal" id="dialog5" title="Correct record">
    @Html.Action("CorrectRecord5")
    </div>  }
} 

