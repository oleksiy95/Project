@if (ViewBag.ErrorsInCSV == "true")
{
    @Html.ActionLink("Download file with wrong data", "DownloadFile");
}

@section scripts
{
    @* script for modal window to correct wrong records *@
    <script>
        $(function () {
            $("input[type='text']").datepicker({
                dateFormat: "yy-mm-dd",
                changeYear: true,
                showOn: "button"
            }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Select a date",
                    text: false
                });
        });

            $(function () {
                $(".modal").dialog({
                    autoOpen: false,
                    width: 450,
                    height: 600,
                    show: {
                        effect: "blind",
                        duration: 1000
                    },
                    hide: {
                        effect: "explode",
                        duration: 1000
                    }
                });

                //$("#modal-opener").click(function () {
                //    $("#dialog-modal").dialog("open");
                //});

                $("#modal-opener1").click(function () {
                    $("#dialog1").dialog("open");
                });

                $("#modal-opener2").click(function () {
                    $("#dialog2").dialog("open");
                });

                $("#modal-opener3").click(function () {
                    $("#dialog3").dialog("open");
                });

                $("#modal-opener4").click(function () {
                    $("#dialog4").dialog("open");
                });

                $("#modal-opener5").click(function () {
                    $("#dialog5").dialog("open");
                });
            });

            function SuccessCorrect()
            {
                $(".modal").dialog("close");
            }
    </script>

    

   
}