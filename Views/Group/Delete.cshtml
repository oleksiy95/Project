@model CourseProject.Models.Group

@{
    ViewBag.Title = "Видалити";
}

<h2>Видалити</h2>

<h3>Ви впевнені, що хочете видалити запис?</h3>
<fieldset>
    <legend>Group</legend>

    <div class="display-label">
         <h3><label>ID групи</label></h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Group_ID)
    </div>

    <div class="display-label">
         <h3><label>Назва</label></h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         <h3><label>Навчальний рік</label></h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EnrollmentYear)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Видалити" /> |
        @Html.ActionLink("Назад до списку", "Index")
    </p>
}
